{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@rpral/types": ["../../packages/types/src/index.ts"],
      "@rpral/api": ["../../packages/api/src/index.ts"],
      "@rpral/ui-web": ["../../packages/ui-web/src/index.ts"]
    }
  },
  "include": ["src", "next.config.mjs", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
